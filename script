pipeline {
    agent any
    stages{
        stage("Parallel"){
            steps{
                parallel{
                    a:{
                        bat "mvn clean"
                    }
                    b:{
                        bat "mvn test"
                    }
                    c:{
                        bat "mvn deploy"
                    }
                }
            }
        }
        stage("Consolidate Results"){
            steps{
                input 'do you want to capture results?'
                junit '**/target/surefire-reports/TEST-*.xml'
                archive 'target/*.jar'
            }
        }
        stage("Email"){
            steps{
                mail body: "${env.JOB_NAME} -Build#${env.BUILD_NUMBER} -${currentBuild.currentResult}\n\nCheck console output at ${env.BUILD_URL} to view the results.",subject:"${env.JOB_NAME} -Build#${env.BUILD_NUMBER} -${currentBuild.currentResult}",to:'te415606@gmail.com'
            }
        }
    }
}
